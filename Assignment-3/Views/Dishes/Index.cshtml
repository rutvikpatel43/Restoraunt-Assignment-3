@model IEnumerable<Assignment_3.Models.Dishes>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("Create", "Dishes")" class="btn btn-primary"><i class="fa fa-plus"></i> Create Dish</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThumbnailUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DishName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DishName)
        </td>
        <td>
           <img src="~/Content/ThumbImages/@item.ThumbnailUrl" height="100px"width="100px"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            <a href="@Url.Action("Edit", "Dishes", new { id=item.Id })" class="btn btn-primary"><i class="fa fa-pencil"></i> Edit</a> 
            <a href="@Url.Action("Details", "Dishes", new { id=item.Id })" class="btn btn-info"><i class="fa fa-info"></i> Info</a> 
            <a href="@Url.Action("Delete", "Dishes", new { id=item.Id })" class="btn btn-danger"><i class="fa fa-remove"></i> Delete</a> 
        </td>
    </tr>
}

</table>
